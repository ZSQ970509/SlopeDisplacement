<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y101"
    android:background="#bfbfbf"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tvSchemeAlaramListNum"
            android:layout_width="@dimen/x70"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="序号"
            android:textColor="#000000"
            android:textSize="@dimen/y24" />

        <TextView
            android:id="@+id/tvSchemeAlaramListTime"
            android:layout_width="@dimen/x250"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="生成时间"
            android:textColor="#000000"
            android:textSize="@dimen/y24" />

        <TextView
            android:id="@+id/tvSchemeAlaramListTarget"
            android:layout_width="@dimen/x106"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="目标"
            android:textColor="#000000"
            android:textSize="@dimen/y24" />

        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="@dimen/x422"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSchemeAlaramListMove1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:text="本次位移"
                android:textColor="#000000"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvSchemeAlaramListMove2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:text="本次位移"
                android:textColor="#000000"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvSchemeAlaramListMove3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:text="本次位移"
                android:textColor="#000000"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvSchemeAlaramListMove4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:text="本次位移"
                android:textColor="#000000"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvSchemeAlaramListMove5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="本次位移"
                android:textColor="#000000" />
        </LinearLayout>


        <TextView
            android:id="@+id/tvSchemeAlaramListMessage"
            android:layout_width="@dimen/x150"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="短信发出"
            android:textColor="#000000"
            android:textSize="@dimen/y24" />

        <RelativeLayout
            android:layout_width="@dimen/x200"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvSchemeAlaramListNumConfirm"
                android:layout_width="@dimen/x200"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="告警确认"
                android:textColor="#000000"

                android:textSize="@dimen/y24" />

            <ImageView
                android:id="@+id/ivSchemeAlaramListNumConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/notice_isconfirmed_btn"
                android:text="确认"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>