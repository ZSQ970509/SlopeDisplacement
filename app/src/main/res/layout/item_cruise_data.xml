<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y71"
    android:background="#bfbfbf"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y70"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvItemCruiseDataId"
            android:layout_width="@dimen/x70"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="90"
            android:textColor="#000000"
            android:textSize="@dimen/x24" />

        <TextView
            android:id="@+id/tvItemCruiseDataCreateTime"
            android:layout_width="@dimen/x280"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="2018-3-13 15:49:04"
            android:lines="2"
            android:textColor="#000000"
            android:textSize="@dimen/x24" />
        <TextView
            android:id="@+id/tvItemCruiseDataAreaName"
            android:layout_width="@dimen/x180"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="面"
            android:textColor="#000000"
            android:textSize="@dimen/x24" />

        <TextView
            android:id="@+id/tvItemCruiseDataMonitorID"
            android:layout_width="@dimen/x100"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="123_12"
            android:textColor="#000000"
            android:textSize="@dimen/x24" />
        <TextView
            android:id="@+id/tvItemCruiseDataNowShift"
            android:layout_width="@dimen/x165"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="2.00"
            android:textColor="#229be5"
            android:textSize="@dimen/x24" />









        <TextView
            android:id="@+id/tvItemCruiseDataShift"
            android:layout_width="@dimen/x165"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="2.00"
            android:textColor="#000000"
            android:textSize="@dimen/x24" />
        <TextView
            android:id="@+id/tvItemCruiseDataAddShift"
            android:layout_width="@dimen/x165"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="2.00"
            android:textColor="#000000"
            android:textSize="@dimen/x24" />
        <TextView
            android:id="@+id/tvItemCruiseDataObd"
            android:layout_width="@dimen/x165"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="3.74600"
            android:textColor="#000000"
            android:textSize="@dimen/x24" />
